<!-- Lobby Container -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 border text-center" style="font-size: 15px; font-weight: bold; font-family: 'Roboto Slab', serif; background-color: #f1f1f1af; border-radius: 25px; margin-top: 200px;">
            <br>
                <h2>Main Lobby</h2>
            </br>
            <div class="col-lg-12 border text-center" style="font-size: 12px; font-weight: bold; font-family: 'Roboto Slab', serif; background-color: #f1f1f1af; border-radius: 25px; margin-top: 200px; margin-top:0px">
                <br>
                    <h2>Join Match</h2>
                </br>
            </div>
            <!-- Partial Handles -->

            <ul class="list-group list-group-flush w-100">

                {{#each allLobbies}}

                    {{> lobbies-block select=false}}

                {{/each}}

            </ul>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <br>
                <h2>Create Lobby</h2>
            </br>

            <div class="col-12 d-flex justify-content-center">
			    <button class="btn btn-success create-lobby">Create Lobby</button>
		    </div>

            <div class="row">
                <div class="col-lg-12">
                    <form class="login">
                        <div class="form-group">
                            <label for="lobby-name">Lobby Name</label>
                            <input type="text" class="form-control" id="lobby-name" placeholder="Type Lobby Name">
                        </div>
                        <div class="form-group">
                            <label for="lobby-size">Party Size</label>
                            <input type="text" class="form-control" id="lobby-size" placeholder="5">
                        </div>
                        <div class="form-check hide" id="player-select-check">
                            <input type="checkbox" class="form-check-input" id="invite-players">
                            <label class="form-check-label" for="invite-players">Invite Players</label>
                        </div>
                        <div class="form-group hide" id="player-select-form">
                            <label for="player-select">Select Players</label>
                            <div class="list-group" id="player-select">

                                {{#each allPlayers}}

                                    {{> players-block select=false}}

                                {{/each}}

                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark" style="font-size: 12px; font-family: 'Roboto Slab', serif;">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/lobby.js"></script>