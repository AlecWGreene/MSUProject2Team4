<!-- Lobby Container -->
<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 border" style="font-size: 15px; font-weight: bold; font-family: 'Roboto Slab', serif; background-color: #f1f1f1e8; border-radius: 25px; margin-top: 200px;">
        <br>
            <h2>Join Lobby</h2>
        </br>
        <div class="row">
            <div class="col-12">
                <form class="create-lobby">

                    <div class="form-group">
                        <label for="lobby-name">Lobby Name</label>
                        <input type="text" class="form-control" id="lobby-name" placeholder="Type Lobby Name">
                    </div>
                    
                    <div class="form-group">
                        <label for="lobby-size">Party Size</label>
                        <input type="text" class="form-control" id="lobby-size" placeholder="4" value="4">
                    </div>
                
                    <div class="form-check" id="player-select-check">
                        <input type="checkbox" class="form-check-input" id="invite-players">
                        <label class="form-check-label" for="invite-players">Invite Players</label>
                        
                    </div>
                
                    <div class="form-group" id="player-select-form">
                    
                        <label for="player-select">Select Players</label>
                        <div class="list-group" id="player-select">

                            {{#each allPlayers}}
                            
                                {{> players-block}}

                            {{/each}}

                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark" id="create-lobby" style="font-size: 12px; font-family: 'Roboto Slab', serif;">Create</button>
                
                </form>
            </div>
        </div>
    </div>
</div>

